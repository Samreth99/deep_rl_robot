<?xml version = "1.0"?>
<!-- this is the xml file with urdf extension -->
<!-- this file describes all element (rigid part) of robots -->
<robot name = "my_robot">
    <!-- add some color, a is stand for transparency, all values rgba is betweel 0 and 1 -->
    <material name = "grey">
        <!-- 0 0 0  is black. 1 1 1 is white. 0.7 0.7 0.7 is grey -->
        <color rgba = "0.7 0.7 0.7 1"/> 
    </material>
        
    <material name = "blue">
        <color rgba = "0 0 0.6 1"/>
    </material>

    <material name = "white">
        <color rgba = "1 1 1 1"/>
    </material>

    <link name = "base_footprint" />

    <!-- create base of robot, link is rigid part of robot -->
    <link name = "base_link">
        <visual>
            <geometry> <!-- to define the shape of the link -->
                <box size = "0.6 0.4 0.2" /> <!-- length, width, height in meters -->
            </geometry>
            <origin xyz = "0 0 0.1" rpy = "0 0 0" /> <!-- roll pitch yaw (xyz rotation) -->
            <!-- add color has to be outside geometry and inside visual -->
            <material name = "blue" />
        </visual>
    </link>

    <link name = "lidar_link">
        <visual>
            <geometry>
                <cylinder radius = "0.1" length = "0.05" />
            </geometry>
            <origin xyz = "0 0 0" rpy = "0 0 0" />
            <material name = "grey"/>
        </visual>
    </link>

    <link name = "left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius = "0.1" length = "0.05"/>
            </geometry>
            <origin xyz = "0 0 0" rpy = "1.57 0 0 " /> <!-- rotate the wheel pi/2 in radian w.r.t x-axis -->
            <material name = "grey" />
        </visual>
    </link>

    <link name = "right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius = "0.1" length = "0.05"/>
            </geometry>
            <origin xyz = "0 0 0" rpy = "1.57 0 0 " /> 
            <material name = "grey" />
        </visual>
    </link>

    <link name = "caster_wheel">
        <visual>
            <geometry>
                <sphere radius = "0.05" /> <!--diameter of shpere is the radius of cylinder-->
            </geometry>
            <origin xyz = "0 0 0" rpy = "0 0 0" />
            <material name = "grey" />
        </visual>
    </link>


    <joint name="base_joint" type="fixed">
        <parent link="base_footprint" />
        <child link = "base_link" />
        <origin xyz = "0 0 0.1" rpy = "0 0 0" />
    </joint>

    <!-- create relationship between link by using joint to create the transform (tf) of robot -->
    <joint name = "base_lider_joint" type = "fixed"> <!-- type is type of mouvement relation between links -->
        <parent link = "base_link" />
        <child link = "lidar_link" />
        <origin xyz = "0 0 0.225" rpy = "0 0 0" />
    </joint>

    <joint name = "base_left_wheel_joint" type = "continuous">
        <parent link = "base_link" />
        <child link = "left_wheel_link" />
        <origin xyz = "-0.15 0.225 0" rpy = "0 0 0" />
        <!-- since we used type cont. so we need to provide axis of rotation -->
        <axis xyz = "0 1 0" /> <!-- rotate around y-axis -->
    </joint>

    <joint name = "base_right_wheel_joint" type = "continuous">
        <parent link = "base_link" />
        <child link = "right_wheel_link" />
        <origin xyz = "-0.15 -0.225 0" rpy = "0 0 0" />
        <axis xyz = "0 1 0" /> <!-- rotate around y-axis -->
    </joint>

    <joint name = "base_caster_wheel_joint" type = "fixed"> <!-- use fixed cuz it is a passive rotation not active-->
        <parent link="base_link" />
        <child link = "caster_wheel" />
        <origin xyz = "0.2 0 -0.05" rpy = "0 0 0" /> <!--for fixed type we dun need axis-->
    </joint>

</robot>
